; Set the sitename of the site
SITE_NAME = 'MyBlog'

; Search Settings
SEARCH = 'off';

; Cookie Settings
COOKIE_NAME = 'MyBlog'
COOKIE_TIMEOUT = 1800
; When on server set this to "production"
ENV = 'testing'

; Base URLS for production/testing envs
BASE_URL = "https://example.com"
BASE_URL_TESTING = 'http://blog.localhost'

# Database Info
DB_SERVER = 'localhost'
DB_USERNAME = 'root'
DB_PASSWORD = ''
DB_NAME = 'blog'

; Registration settings
REGISTRATION_LOCKED = 'true' ; Id set to 'true' new users can only be created by existing users
CAPTCHA = 'false' ; Enables CAPTCHA protection on the login page

; Login Settings
MAX_LOGIN_ATTEMPTS = 5
LOGIN_ATTEMPT_PERIOD = 300 ; Seconds
